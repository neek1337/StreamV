<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.artem.streamv.MainActivity">

    <TableLayout
        android:id="@+id/tlImpEventContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3">


        <TableRow
            android:id="@+id/trStatusCode"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:weightSum="3"
            android:layout_weight="1"

            >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/photo3"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="HandleClick" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/photo2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="HandleClick" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/photo4"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:onClick="HandleClick" />

        </TableRow>

        <TableRow
            android:id="@+id/trStatusCode2"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:weightSum="3"
            android:layout_weight="1"

            >

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/photo5"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="HandleClick" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/photo6"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="HandleClick" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/phota_alta1"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:onClick="HandleClick" />

        </TableRow>

        <TableRow
            android:id="@+id/trStatusCode3"
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:weightSum="3"

            >

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/photo8"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="HandleClick" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/photo9"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="HandleClick" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/photo10"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textColor="#FFFFFF"
                android:onClick="HandleClick" />

        </TableRow>
    </TableLayout>

</RelativeLayout>
